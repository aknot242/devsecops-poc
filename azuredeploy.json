{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "containerGroupName": {
            "type": "string",
            "defaultValue": "edgar-devsecopspoc-container-group",
            "metadata": {
                "description": "Edgar DevSecOps POC container group"
            }
        },
        "imageRegistryLoginServer": {
            "type": "string"
        },
        "imageRegistryUsername": {
            "type": "string"
        },
        "imageRegistryPassword": {
            "type": "string"
        },
        "container1Image": {
            "type": "string"
        },
        "container2Image": {
            "type": "string"
        }
    },
    "variables": {
        "container1Name": "dotnetcorewebapp",
        "container2Name": "nap-dotnetcorewebapp"
    },
    "resources": [
        {
            "name": "[parameters('containerGroupName')]",
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2019-12-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "containers": [
                    {
                        "name": "[variables('container1Name')]",
                        "properties": {
                            "image": "[parameters('container1Image')]",
                            "resources": {
                                "requests": {
                                    "cpu": 1,
                                    "memoryInGb": 1.5
                                }
                            }
                        }
                    },
                    {
                        "name": "[variables('container2Name')]",
                        "properties": {
                            "image": "[parameters('container2Image')]",
                            "resources": {
                                "requests": {
                                    "cpu": 2,
                                    "memoryInGb": 4
                                }
                            },
                            "ports": [
                                {
                                    "port": 80
                                },
                                {
                                    "port": 443
                                }
                            ]
                        }
                    }
                ],
                "osType": "Linux",
                "ipAddress": {
                    "type": "Public",
                    "ports": [
                        {
                            "protocol": "tcp",
                            "port": 80
                        },
                        {
                            "protocol": "tcp",
                            "port": 443
                        }
                    ]
                },
                "imageRegistryCredentials": [
                    {
                        "server": "[parameters('imageRegistryLoginServer')]",
                        "username": "[parameters('imageRegistryUsername')]",
                        "password": "[parameters('imageRegistryPassword')]"
                    }
                ]
            }
        }
    ],
    "outputs": {
        "containerIPv4Address": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups/', parameters('containerGroupName'))).ipAddress.ip]"
        }
    }
}